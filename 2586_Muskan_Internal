1st ques-
import pandas as pd
import matplotlib.pyplot as plt
def draw_scatter_plot(data):
    plt.figure(figsize=(8, 6))
    for crop in data['Crop'].unique():
        crop_data = data[data['Crop'] == crop]
        plt.scatter(crop_data['Rainfall'], crop_data['Yield'], label=crop)
    plt.xlabel('Rainfall')
    plt.ylabel('Yield')
    plt.title('Scatter Plot of Yield vs Rainfall for Different Crops')
    plt.legend()
    plt.show()
def draw_histogram(data):
    plt.figure(figsize=(8, 6))
    plt.hist(data['Customer Edge'], bins=10, color='skyblue', edgecolor='black')
    plt.xlabel('Customer Edge')
    plt.ylabel('Frequency')
    plt.title('Histogram of Customer Edge Distribution')
    plt.show()
def draw_line_plot(data):
    plt.figure(figsize=(10, 6))
    for crop in data['Crop'].unique():
        crop_data = data[data['Crop'] == crop]
        plt.plot(crop_data['Year'], crop_data['Yield'], label=crop)
    plt.xlabel('Year')
    plt.ylabel('Yield')
    plt.title('Trend in Crop Yield for Each Crop')
    plt.legend()
    plt.grid(True)
    plt.show()
def main():
    crop_data = pd.read_csv('crop.csv')
    draw_scatter_plot(crop_data)
    draw_histogram(crop_data)
    draw_line_plot(crop_data)
if _name_ == "_main_":
    main()


2nd ques- 
class ToDoList:
    def _init_(self):
        self.tasks = []
    def display_menu(self):
        print("=== ToDo List Menu ===")
        print("1. Add Task")
        print("2. View Tasks")
        print("3. Delete Task")
        print("4. Exit")
    def add_task(self, task):
        self.tasks.append(task)
        print("Task added successfully.")
    def view_tasks(self):
        if not self.tasks:
            print("No tasks added yet.")
        else:
            print("Tasks:")
            for i, task in enumerate(self.tasks, start=1):
                print(f"{i}. {task}")
    def delete_task(self, task_index):
        if task_index < 1 or task_index > len(self.tasks):
            print("Invalid task index.")
        else:
            del self.tasks[task_index - 1]
            print("Task deleted successfully.")
def main():
    todo_list = ToDoList()
    while True:
        todo_list.display_menu()
        choice = input("Enter your choice: ")
        if choice == '1':
            task = input("Enter task: ")
            todo_list.add_task(task)
        elif choice == '2':
            todo_list.view_tasks()
        elif choice == '3':
            task_index = int(input("Enter index of task to delete: "))
            todo_list.delete_task(task_index)
        elif choice == '4':
            print("Exiting...")
            break
        else:
            print("Invalid choice. Please choose again.")
if _name_ == "_main_":
    main()
